<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/pollicon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/ic_action_info" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:background="@color/ripple_material_dark"
        android:src="@drawable/ic_action_more" />

    <TextView
        android:id="@+id/polldescription"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/pollicon"
        android:layout_toLeftOf="@+id/menuButton"
        android:ellipsize="marquee"
        android:text="Contacte a el administrador del sistema"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/polltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/polldescription"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/pollicon"
        android:layout_toLeftOf="@+id/menuButton"
        android:gravity="center_vertical"
        android:text="Usted no tiene encuestas asignadas"
        android:lines="2"
        android:textSize="16sp" />


</RelativeLayout>