<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/analiizo_header_app" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:text="@string/login_messageTextView_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/ColorPrimaryDark" />

            <EditText
                android:id="@+id/userEditText"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text_new"
                android:drawableLeft="@drawable/ic_user_login"
                android:ems="10"
                android:hint="@string/login_userEditText_hint"
                android:singleLine="true" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_text_new"
                android:drawableLeft="@drawable/ic_pass_login"
                android:ems="10"
                android:hint="@string/login_passwordEditText_hint"
                android:inputType="textPassword"
                android:singleLine="true" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rectangular_button_new"
                android:text="@string/login_loginButton_text"
                android:textColor="@color/ColorWhite" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>