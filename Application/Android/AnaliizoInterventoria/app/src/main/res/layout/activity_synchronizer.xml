<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masterRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miido.analiizoOBRAS.synchronizer">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|top"
            android:contentDescription="lHeader"
            android:src="@drawable/analiizo_l_header" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="right|top"
            android:contentDescription="rHeader"
            android:src="@drawable/analiizo_r_header" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/parentScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"></ScrollView>

</RelativeLayout>
